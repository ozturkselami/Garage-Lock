#include <main.h>
#include <string.h>
#define LCD_ENABLE_PIN PIN_B5
#define LCD_RS_PIN PIN_B7
#define LCD_RW_PIN PIN_B6
#define LCD_DATA4 PIN_B3
#define LCD_DATA5 PIN_B2
#define LCD_DATA6 PIN_B1
#define LCD_DATA7 PIN_B0

#define use_portb_lcd TRUE
#include <lcd.c>
//#include <Flex_kbd.c> // http://www.ccsinfo.com/forum/viewtopic.php?t=26333

char *password1[] = {'1','2','3','4'};
char *password2[] = {'9','7','5','3'};
char *enteredPW[] = {'X', 'X', 'X', 'X'};

void lcdClear()
{
   lcd_send_byte(0, 0x1);  
}

void CursorBlink()
{
   lcd_send_byte(0, 0x0F);  
}

int checkPW()
{
   int cnt1 = 0, cnt2 = 0;
   for(int i = 0; i < 4; i++)
   {
      if(enteredPW[i] == password1[i]) cnt1++;
   }
   
   for(i = 0; i < 4; i++)
   {
      if(enteredPW[i] == password2[i]) cnt2++;
   }
   
   if(cnt1 == 4 || cnt2 == 4) 
      {
         printf(lcd_putc, "\fSIFRE DOGRU\n %d %d", cnt1, cnt2);
         delay_ms(2000);
         return 1; //Þifre Doðru
      }
   else
      {
         printf(lcd_putc, "\fSIFRE HATALI\n %d %d", cnt1, cnt2);
         pressedBtn = '*';
         delay_ms(2000);
         return 0;
      }
}

void openDoor()
{      
      printf(lcd_putc, "\fKAPI ACILIYOR...");
      output_low(motorForward);
      output_high(motorBackward);
      delay_ms(1000); //Kapý açýlma süresi
      output_low(motorForward);
      output_low(motorBackward);
      printf(lcd_putc, "\fKAPI ACIK");
}
void closeDoor()
{      
      output_high(motorForward);
      output_low(motorBackward);
      printf(lcd_putc, "\fKAPI KAPANIYOR...");
      delay_ms(1000); //Kapý açýlma süresi
      output_low(motorForward);
      output_low(motorBackward);
      printf(lcd_putc, "\fKAPI KAPANDI");
}

void welcomeMsg()
{
   printf(lcd_putc, "\f LUTFEN SIFREYI\n    GIRINIZ   ");
}


void main()
{
   set_tris_d(0b01111000);
   int cnt = 0;

   lcd_init(); // LCD Display Initialize
   lcdClear(); // Clear LCD Display
   welcomeMsg();
   //loop
   for(;;)
   {  
      pressedBtn = getPressedBtn();
      if(pressedBtn != 'I' && pressedBtn != '*' && pressedBtn != '#')
      {
         if(isBtnPressed && cnt < 4){
            enteredPW[cnt] = pressedBtn;
            printf(lcd_putc,"\fC:%d - PW: %c", cnt, enteredPW[0]);
            for(int i = 1; i <= 3; i++)
            {
               printf(lcd_putc,"%c", enteredPW[i]);
            }
            printf(lcd_putc, "\nGIRIS ICIN #'E BASIN");
            delay_ms(250);
            isBtnPressed = 0;
            cnt++;
         }
      }
      
      if(pressedBtn == '#')
      {
         int status = checkPW();
         //Þifre girildi þifreyi kontrol et doðruysa aç
         if(status == 1)
         {
            printf(lcd_putc, "\f  SIFRE DOGRU\nLUTFEN BEKLEYIN");
            delay_ms(2000);
            openDoor();
            delay_ms(2000);
            closeDoor();
         }
         else printf(lcd_putc, "ELSE");
         welcomeMsg();
         for(int i = 0; i < 4; i++){enteredPW[i] = 'X';}
         cnt = 0;
      }
      
//!      if(pressedBtn == '*')
//!      {
//!         //Baþtan þifre girilmesi saðlýyor
//!         for(int i = 0; i < 4; i++){enteredPW[i] = 'X';}
//!         cnt = 0;
//!         printf(lcd_putc,"\f*C:%d - \nPW: %s", cnt, enteredPW);
//!         for(i = 1; i <= 3; i++)
//!         {
//!            printf(lcd_putc,"%c", enteredPW[i]);
//!         }
//!      }
      
   }
}
